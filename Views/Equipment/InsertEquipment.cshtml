@model Equipment

<h2>Create a New Item</h2>

@using (Html.BeginForm("InsertEquipmentToDatabase", "Equipment", "Post"))
{
    <input asp-for="EquipmentID" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" />

    <div class="form-group">
        <label for="">Select a Department</label>
        <select class="form-control" name="DepartmentName" value="">
            @foreach (var department in Model.Departments)
            {
                <option value="@department.DepartmentID">@department.DepartmentID @department.DepartmentName</option>
            }
        </select>
    </div>

    <input type="submit" value="Create Item" class="btn btn-primary" />
}
